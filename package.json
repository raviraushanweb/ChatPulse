{
  "name": "chatpulse",
  "version": "1.0.0",
  "description": "ChatPulse is a feature-rich, real-time chat application built using Node.js, WebSockets, and Socket.io. Designed with scalability and extensibility in mind, ChatPulse offers a suite of functionalities from basic text messaging to advanced features like voice and video calls, end-to-end encryption, and bot support.",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raviraushanweb/ChatPulse.git"
  },
  "keywords": [
    "chat",
    "real-time",
    "Node.js",
    "WebSockets",
    "Socket.io",
    "TypeScript"
  ],
  "author": "Ravi Raushan <raviraushanweb@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^4.1.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "passport": "^0.5.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^4.5.4",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "@types/node": "^17.0.8",
    "@types/express": "^4.17.13"
  }
}